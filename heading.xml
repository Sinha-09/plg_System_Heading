<?xml version="1.0" encoding="UTF-8"?>
    <extension type="plugin" version="4.0" method="upgrade" group="system">
        <name>heading</name>
        <creationDate>JUNE 2021</creationDate>
        <author>Shivam Sinha</author>
        <version>1.0</version>
        <description>simple text plugin</description>

        <files>
            <filename plugin="heading">heading.php</filename>
        </files>

        <languages folder="administrator/language">
            <language tag="en-GB">language/en-GB/en-GB.plg_system_text.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.plg_system_text.sys.ini</language>
        </languages>
        <administration>
        	<files folder="administrator/component/shivam">
        		<filename>heading.php</filename>
        		<filename>index.html</filename>
        	</files>
        </administration>
      

         <config>
            <fields name="params">
                <fieldset name="basic">
                  <field
                      name="text_area"
                      type="text"
                      label="enter text"
                      description="assignment"
                   
                  />
                   
                </fieldset>
            </fields>
        </config>
    </extension>
